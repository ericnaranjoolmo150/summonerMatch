     background-position: 50% 40%;">

    <div class="container-fluid justify-content-center" style="min-height: 100vh;">
        <div>
            <div class="d-flex justify-content-center align-items-center">
                <button class="btn btn-lg border-0 p-0 rounded-circle" type="button" data-bs-toggle="modal" data-bs-target="#imageModal">
                    <img id="ProfileImage" class="rounded-circle img-fluid" src="@Url.Content(usuario.ImagenPerfil)" alt="Foto de perfil" />
                </button>
            </div>

            <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-body container">
                            <div class="row">
                                <!-- Use buttons instead of images in the modal -->
                                <!-- Vista -->
                                <div class="col-md-4">
                                    <form asp-action="CambiarImagePerfil" asp-controller="Account" method="post" class="align-middle">
