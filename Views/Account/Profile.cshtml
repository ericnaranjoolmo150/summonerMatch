                                    <form asp-action="CambiarImagePerfil" asp-controller="Account" method="post" class="align-middle">
                                        <input type="text" class="d-none" id="imgPerfil" name="imgPerfil" value="~/assets/images/imgProfile/Soraka.jpg" readonly>
                                        <button class="btn btn-link" type="submit" onclick="changeProfileImage('~/assets/images/imgProfile/Soraka.jpg')" name="imgPerfil">
